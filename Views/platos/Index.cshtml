@model IEnumerable<CRUDEntityFramework.Models.plato>

@{
    ViewBag.Title = "Index";
}

<h2>Lista de platos</h2>

<p>
    @Html.ActionLink("Nuevo plato", "Create","",new { @class="btn btn-success" })
</p>
<div class="table-responsive">
    <table class="table table-striped ">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.categoria.categoria1)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.nombre)
            </th>
            <th style="width: 40%">
                @Html.DisplayNameFor(model => model.descripcion)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.precio)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.imagen)
            </th>
            <th>Acciones</th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.categoria.categoria1)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.nombre)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.descripcion)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.precio)
                </td>
                <td>
                    @*@Html.DisplayFor(modelItem => item.imagen)*@
                    <img style="width: 70px;" src="@Html.DisplayFor(modelItem => item.imagen)" />
                </td>
                <td>
                    @Html.ActionLink(" ", "Edit", new { id = item.id }, new { @class = "btn btn-warning glyphicon glyphicon-edit" }) |
                    @Html.ActionLink(" ", "Details", new { id = item.id }, new { @class = "btn btn-primary glyphicon glyphicon-search" }) |
                    @Html.ActionLink(" ", "Delete", new { id = item.id }, new { @class = "btn btn-danger glyphicon glyphicon-trash" })
                </td>
            </tr>
        }

    </table>.
</div>
